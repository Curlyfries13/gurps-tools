{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "noEmit": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl":"./",
    "paths":{
      "/*":["./*"],
      "src/*": ["./src/*"]
    }
    },
    "include": [
      "**/*.ts", "**/*.tsx"
    ],
    "exclude": [
      "./node_modules"
    ]
}
